{
  "name": "pix_create",
  "version": "1.0.0",
  "description": "Create Pixel Arts On Pix Create.",
  "main": "index.js",
  "scripts": {
    "watch:scss": "node-sass sass/main.scss css/comp.style.css -w",
    "dev:server": "live-server",
    "start": "clear && npm-run-all --parallel watch:scss dev:server",
    "compile:sass": "node-sass sass/main.scss css/comp.style.css",
    "compress:css": "node-sass css/comp.style.css css/comp.style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-shadoww/pix-create.git"
  },
  "keywords": [
    "pixel-art"
  ],
  "author": "shadoww",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dev-shadoww/pix-create/issues"
  },
  "homepage": "https://github.com/dev-shadoww/pix-create#readme",
  "devDependencies": {
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5"
  }
}
